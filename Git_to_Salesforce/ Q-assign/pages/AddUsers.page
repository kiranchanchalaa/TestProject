<apex:page lightningStylesheets="true" controller="ortoo_qra.AddUserController" sidebar="false" showHeader="false" id="thePage">
   <style type="text/css">
.loading-icon {
   background-image: url(/img/loading.gif);
   width: 16px;
   height: 16px;
}

a.alpha-link {
   font-weight: normal;
   font-size: 91%;
   padding: 0 4px;
   color: #015BA7 !important;
}

a.alpha-link+a.alpha-link {
   border-left: 1px solid #CFCECE;
}

a.alpha-link:hover {
   background-color: #e0f5fc !important;
} 

a.alpha-select {
   font-weight: bold;
   text-decoration: none;
   background-color: #C6E1FF;
   color: #000000 !important;
}

.search-block {
   text-align: center;
}

.search-block input { 
   margin: 0px 15px 0px 5px;
}

.search-block-button {
   min-width: 110px;
}

.process-block {
   text-align: center;
   margin-top: 10px;
}

.process-block input {
   margin: 0px 15px;
}

.process-block-button {
   min-width: 110px;
}

.page-buttons input {
   min-width: 110px;
}


</style>

<script type="text/javascript">
function proceed(){
   if(user_error == 'false') 
   {
   window.opener.location.href="/apex/AssignmentGroup?id={!$CurrentPage.parameters.id}";
   window.top.close();
   }
}


function selectAllCheckboxes(obj,receivedInputID)
{
	
   var inputCheckBox = document.getElementsByTagName("input");                  
   for(var i=0; i<inputCheckBox.length; i++)
   {          
       if(inputCheckBox[i].id.indexOf(receivedInputID)!=-1)
       {                                     
           inputCheckBox[i].checked = obj.checked;
          
       }
   }
   UpdateUserSelectedSet();
   
 }
 
 function start()
 {
 	var button1 = document.getElementById('thePage:TheForm:TablePanel:addUser1');
 	var button2 = document.getElementById('thePage:TheForm:TablePanel:addUser2');
 	button1.disabled = true;
 	button2.disabled = true;
 	button1.value = 'Processing...';
 	button2.value = 'Processing...';	
 	 	
 }
 
 function stop()
 {
 	var button1 = document.getElementById('thePage:TheForm:TablePanel:addUser1');
 	var button2 = document.getElementById('thePage:TheForm:TablePanel:addUser2');
 	button1.disabled = false;
 	button2.disabled = false;
 	button1.value = 'Add Selected Users';
 	button2.value = 'Add Selected Users';	
 }
 
</script>
	 <apex:pageMessages id="error_messages"/>
   <apex:form id="TheForm">
   <apex:outputPanel id="reRenderedPanelToSetVariable">
   <script type="text/javascript">
      user_error = "{!error_new}";
   </script>
</apex:outputPanel>
   <apex:actionfunction action="{!addSelectedUsers}" name="errormessage" rerender="reRenderedPanelToSetVariable" />
   <apex:actionfunction action="{!UpdateUserSelectedSet}" name="UpdateUserSelectedSet" rerender="_SelectedCount,TablePanel" status="actionStatusOnProcessStatus"/>
   <apex:pageBlock >
   	<apex:sectionHeader title="Add Users"/>
      </apex:pageBlock>
     
      <apex:pageBlock mode="maindetail">
         <div class="search-block">
            <div style="display: inline-table">
               <span>By Name:</span>
               <apex:inputText value="{!searchName}" />
            </div>
            <div style="display: inline-table">
               <span>By User Role:</span>
               <apex:inputText value="{!searchRole}" />
            </div>
            <apex:commandButton styleClass="search-block-button" value="Search" action="{!SearchUser}" rerender="TablePanel"
               status="TableUpdateStatus" />
         </div>
      </apex:pageBlock>
      <apex:pageBlock id="TablePanel">
         <div>
            <span class="page-buttons" style="float: left; margin-bottom: 5px;"> <apex:commandButton disabled="{!!StdSetControllerUser.hasprevious}" value="Previous" action="{!StdSetControllerUser.previous}"
                  rerender="TablePanel" /> <apex:commandButton disabled="{!!StdSetControllerUser.hasnext}" value="Next"
                  action="{!StdSetControllerUser.next}" rerender="TablePanel" />
            </span>
           
            
            <apex:actionStatus id="ProcessButtonStatus">
               <apex:facet name="stop">
                  <apex:outputPanel >
                     <apex:commandButton styleClass="process-block-button" value="Add Selected Users" action="{!addSelectedUsers}"
                        status="ProcessButtonStatus" oncomplete="proceed();" rerender="error_messages,reRenderedPanelToSetVariable" id="addUser1"/>
                  </apex:outputPanel>
               </apex:facet>
               <apex:facet name="start">
                  <apex:outputPanel >
                     <apex:commandButton styleClass="process-block-button" value="Processing..." disabled="true"/>
                  </apex:outputPanel>
               </apex:facet>
            </apex:actionStatus>
            <!-- alphabet selection -->
            <span style="float: right; margin: 5px 5px 5px 5px;"> <apex:repeat value="{!AlphaList}" var="a">
                  <apex:commandLink value="{!a}" action="{!BuildQuery}" rerender="TablePanel"
                     styleClass="alpha-link{!if(AlphaFilter=a,' alpha-select','')}" status="TableUpdateStatus">
                     <apex:param name="AlphaFilter" value="{!a}" assignTo="{!AlphaFilter}" />
                  </apex:commandLink>
               </apex:repeat>
            </span>
         </div>

         <div style="clear: both;"></div>

         <apex:actionStatus id="TableUpdateStatus">
            <apex:inputHidden value="{!AlphaFilter}" id="hiddenField" />
            <!-- loading message -->
            <apex:facet name="start">
               <apex:outputPanel layout="block" styleClass="message infoM4">
                  <apex:panelGrid columns="2" styleClass="messageTable" columnClasses="messageCell" style="padding:0px;margin:0px;">
                     <apex:panelGroup >
                        <img class="loading-icon" src="/s.gif" />
                     </apex:panelGroup>
                     <apex:panelGroup >
                        <div class="messageText">Please wait...</div>
                     </apex:panelGroup>
                  </apex:panelGrid>
               </apex:outputPanel>
            </apex:facet>

            <!-- User table -->
            <apex:facet name="stop">
               <apex:pageBlockTable value="{!CurrentUserList}" var="a">
                  <apex:column width="20%">
                     <apex:facet name="header">
                        <apex:outputPanel id="SelectedCount">
                          
                           <div style="text-align: center;">
                           <apex:inputCheckbox onclick="selectAllCheckboxes(this,'check-box')">
                           </apex:inputcheckbox>
                           <apex:outputText value="Select All" />
                           <br />
                              <apex:outputText value="Selected" />                            
                              <apex:outputText value="({!UserSelectedCount})" />
                           </div>
                        </apex:outputPanel>
                     </apex:facet>
                     <div style="text-align: center;">
                        <apex:inputCheckBox value="{!a.aCheckBox}" id="check-box">
                           <apex:actionSupport event="onchange" status="actionStatusOnProcessStatus" rerender="SelectedCount" action="{!UpdateUserSelectedSet}" />
                           </apex:inputcheckbox>
                     </div>
                  </apex:column>
                  <apex:column width="40%">
                     <apex:facet name="header">
                        <apex:commandLink action="{!SortToggle}" rerender="TablePanel" status="TableUpdateStatus">
                           <apex:param name="SortField" value="Name" assignTo="{!SortField}" />
                           <apex:outputText value="{!$ObjectType.User.Fields.Name.Label}{!IF(SortField=='Name',IF(SortDirection='asc','▲','▼'),'')}" />
                        </apex:commandLink>
                     </apex:facet>
                     <apex:outputLink value="/{!a.aUser.Id}" target="_blank">{!a.aUser.Name}</apex:outputlink>
                  </apex:column>
                  <apex:column width="40%">
                     <apex:facet name="header">
                        <apex:commandLink action="{!SortToggle}" rerender="TablePanel" status="TableUpdateStatus">
                           <apex:param name="SortField" value="UserRole.Name" assignTo="{!SortField}" />
                           <apex:outputText value="User Role {!IF(SortField=='UserRole.Name',IF(SortDirection='asc','▲','▼'),'')}" />
                        </apex:commandLink>
                     </apex:facet>
                     <apex:outputField value="{!a.aUser.UserRole.Name}" />
                  </apex:column>
               </apex:pageBlockTable>
            </apex:facet>
         </apex:actionStatus>
         <div>
            <span class="page-buttons" style="float: left; margin-bottom: 5px;"> <apex:commandButton disabled="{!!StdSetControllerUser.hasprevious}" value="Previous" action="{!StdSetControllerUser.previous}"
                  rerender="TablePanel" /> <apex:commandButton disabled="{!!StdSetControllerUser.hasnext}" value="Next"
                  action="{!StdSetControllerUser.next}" rerender="TablePanel" />
            </span>
             <apex:actionStatus id="actionStatusOnProcessStatus" onStart="start();" onStop="stop();">
	          </apex:actionStatus>
            <apex:actionStatus id="ProcessButtonStatus2">
               <apex:facet name="stop">
                  <apex:outputPanel >
                     <apex:commandButton styleClass="process-block-button" value="Add Selected Users" action="{!addSelectedUsers}"
                        status="ProcessButtonStatus2" oncomplete="proceed();" rerender="error_messages,reRenderedPanelToSetVariable" id="addUser2"/>
                  </apex:outputPanel>
               </apex:facet>
               <apex:facet name="start">
                  <apex:outputPanel >
                     <apex:commandButton styleClass="process-block-button" value="Processing..." disabled="true"/>
                  </apex:outputPanel>
               </apex:facet>
            </apex:actionStatus>
         </div>
         <div style="margin-top: 5px;">
            <apex:outputText value="Number of Records per Page: " />
            <apex:selectList value="{!RecPerPage}" size="1">
               <apex:selectOptions value="{!RecPerPageOption}" />
               <apex:actionSupport event="onchange" action="{!BuildQuery}" reRender="TablePanel" status="TableUpdateStatus" />
            </apex:selectList>
         </div>
      </apex:pageBlock>
   </apex:form>
</apex:page>